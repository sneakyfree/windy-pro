# Windy Pro — Environment Variables
# Copy this file to .env and fill in your values.

# ═══════════════════════════════════
#  Cloud API (required for cloud mode)
# ═══════════════════════════════════

# API key for authenticating cloud transcription requests
WINDY_API_KEY=your-api-key-here

# PostgreSQL connection string
DATABASE_URL=postgresql://windy:CHANGE_ME@localhost:5432/windy_pro

# Redis connection string (rate limiting + session cache)
REDIS_URL=redis://localhost:6379/0

# ═══════════════════════════════════
#  Database (Docker Compose)
# ═══════════════════════════════════

POSTGRES_DB=windy_pro
POSTGRES_USER=windy
POSTGRES_PASSWORD=CHANGE_ME

# ═══════════════════════════════════
#  Optional
# ═══════════════════════════════════

# Allowed CORS origins (comma-separated)
CORS_ORIGINS=https://windypro.com,http://localhost:5173

# Log level (debug, info, warning, error)
LOG_LEVEL=info
